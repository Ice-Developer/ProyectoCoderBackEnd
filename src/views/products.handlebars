<h1>Todos los productos</h1>
{{#if isValid}}
<div>
{{#each result.docs}}
    <h2>Title: {{{this.title}}}</h2>
    <h3>Description: {{this.description}}</h3>
    <h3>Price:  {{this.price}}</h3>
    <div>{{this.thumbnail}}</div>
    <p>Stock: {{this.stock}}</p>
    <button id={{this.id}} value= 1 >Agregar al carrito</button>
{{/each}}
</div>
<br />

<div>
    {{#if prevLink}}
    <a href={{prevLink}}>
            Anterior </a>
    {{/if}}

    {{!-- numero de pagina --}}
    &nbsp;
    {{result.page}}
    &nbsp;

    {{#if nextLink}}
    <a href={{nextLink}}>
        Siguiente -> </a>
    {{/if}}
</div>
{{else}}
<h1>No hay productos para mostrar</h1>
{{/if}}





