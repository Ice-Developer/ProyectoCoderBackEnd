
<div>
    <h1>Tu perfil (sin datos sensibles)</h1>
    <p>{{user.name}}</p>
    <p>{{user.email}}</p>
    <p>{{user.age}}</p>
</div>
<br>
<br>
<h1>Todos los productos</h1>
{{#if isValid}}
<div >
{{#each result.docs}}
    <div style="border: 1px black solid; border-radius: 20px; padding:10px;  width:500px">
        <h2>Title: {{{this.title}}}</h2>
        <h3>Description: {{this.description}}</h3>
        <h3>Price:  {{this.price}}</h3>
        <div>{{this.thumbnail}}</div>
        <p>Stock: {{this.stock}}</p>
        <br>
        <div style="display: flex; justify-content:center; align-items: center; width:100%;">
        <button style="padding: 10px 8px; border-radius: 20px; background-color:darkolivegreen; color:azure" id={{this.id}} value= "1"  >Agregar al carrito</button>
        </div>
        </div>
    </div>
    <br>
    <br>
{{/each}}
</div>
<br />

<div>
    {{#if prevLink}}
    <a href={{prevLink}}>
            Anterior </a>
    {{/if}}

    {{!-- numero de pagina --}}
    &nbsp;
    {{result.page}}
    &nbsp;

    {{#if nextLink}}
    <a href={{nextLink}}>
        Siguiente -> </a>
    {{/if}}
</div>
{{else}}
<h1>No hay productos para mostrar</h1>
{{/if}}
